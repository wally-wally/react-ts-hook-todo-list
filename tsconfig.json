{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}